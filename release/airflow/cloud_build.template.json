{
  "steps": [
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "args": [ "gsutil", "cp", "gs://$_GCS_RELEASE_TOOLS_PATH/istio_checkout_code.sh", "." ]
    },
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "args": [ "chmod", "u+x", "./istio_checkout_code.sh" ]
    },
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "args": [ "./istio_checkout_code.sh", "-b", "$_BRANCH", "-r", "$_GCS_RELEASE_TOOLS_PATH" ]
    },
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/cloud_builder.sh", "-h", "$_ISTIO_DOCKER_HUB", "-t", "$_VERSION", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/store_artifacts.sh", "-p", "$_GCS_BUILD_PATH", "-o", "/output" ]
    },
    {
      "name": "gcr.io/istio-testing/istio-builder:0.5.10",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/rel_push_docker.sh", "-p", "$_GCS_BUILD_PATH", "-h", "$_PUSH_DOCKER_HUBS", "-v", "$_VERSION" ]
    }
  ],
  "options": {
    "machineType": "N1_HIGHCPU_8"
  },
  "timeout": "3600s",
}
